{
  "name": "yutodo",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "cd e2e && npm ci && npm test",
    "test:e2e:ui": "cd e2e && npm ci && npm run test:headed",
    "test:e2e:headed": "cd e2e && npm ci && HEADED=true npm test",
    "build:e2e": "npm run build && npm run tauri build",
    "tauri:e2e": "tauri dev --config src-tauri/tauri.e2e.conf.json",
    "setup:e2e": "node -e \"process.platform === 'win32' ? require('child_process').spawn('powershell', ['-File', 'scripts/setup-e2e.ps1'], {stdio: 'inherit'}) : require('child_process').spawn('bash', ['scripts/setup-e2e.sh'], {stdio: 'inherit'})\"",
    "setup:e2e:linux": "chmod +x scripts/setup-e2e.sh && ./scripts/setup-e2e.sh",
    "setup:e2e:windows": "powershell -File scripts/setup-e2e.ps1",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ltd/j-toml": "^1.38.0",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.2.2",
    "@tauri-apps/plugin-dialog": "^2.2.2",
    "@tauri-apps/plugin-fs": "^2.3.0",
    "@tauri-apps/plugin-opener": "^2",
    "@types/node": "^24.0.1",
    "@types/react-datepicker": "^6.2.0",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.514.0",
    "react": "^18.3.1",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^25.0.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}
